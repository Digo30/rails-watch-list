<h2><%= @list.name %></h2>
<div class="bookmarks-container">
  <div class="movies-grid">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <div class="movie-poster">
          <%= image_tag(bookmark.movie.poster_url, alt: "#{bookmark.movie.title} Poster", class: "movie-poster-image") if bookmark.movie.poster_url.present? %>
        </div>
        <div class="movie-details">
          <p><strong>Filme:</strong> <%= bookmark.movie.title %></p>
          <p><strong>Coment√°rios:</strong> <%= bookmark.comment %></p>
        </div>
        <%= link_to "Delete", list_bookmark_path(@list, bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list"}, class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>



<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary"%>

<%= link_to "Return to lists", lists_path, class: "btn btn-outline-secondary"%>

<%= link_to "Edit list", edit_list_path(@list), class: "btn btn-outline-secondary"%>

<%= link_to 'delete', list_path(@list), data: { turbo_method: :delete, turbo_confirm: 'are you sure?'}, class: "btn btn-outline-secondary"%>
