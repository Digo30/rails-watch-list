<h1>Add a Bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.input :movie_id, collection: Movie.all, label: "Select a movie", as: :select, include_blank: "Choose a movie" %>
  </div>

  <div class="form-group">
    <%= f.input :comment, as: :text, label: "Comment" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Create Bookmark", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
